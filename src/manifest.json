{
    "name": "UofT Dark Mode",
    "version": "0.0.2",
    "manifest_version": 3,
    "description": "Adds dark mode to UofT websites (Acorn, Quercus, Weblogin)",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Save timetable"
    },
    "content_scripts": [
        {
            "matches": [
                "https://acorn.utoronto.ca/sws/*"
            ],
            "css": [
                "acorn/styles.css"
            ],
            "js": [
                "acorn/html2canvas.min.js"
            ]
        },
        {
            "matches": [
                "https://q.utoronto.ca/*"
            ],
            "css": [
                "quercus/styles.css"
            ]
        },
        {
            "matches": [
                "https://idpz.utorauth.utoronto.ca/*",
                "https://weblogin.utoronto.ca/*"
            ],
            "css": [
                "weblogin/styles.css"
            ]
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "acorn/styles.css"
            ],
            "matches": [
                "https://acorn.utoronto.ca/*"
            ]
        }
    ]
}