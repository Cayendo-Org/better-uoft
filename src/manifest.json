{
    "name": "UofT Dark Mode",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "Adds dark mode to UofT websites (Acorn, Quercus, Weblogin)",
    "background": {
        "scripts": [
            "hot-reload.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://acorn.utoronto.ca/sws/*"
            ],
            "css": [
                "acorn/styles.css",
                "styles.css"
            ],
            "js": [
                "acorn/html2canvas.min.js"
            ]
        },
        {
            "matches": [
                "https://q.utoronto.ca/*"
            ],
            "css": [
                "quercus/styles.css",
                "styles.css"
            ]
        },
        {
            "matches": [
                "https://idpz.utorauth.utoronto.ca/*",
                "https://weblogin.utoronto.ca/*"
            ],
            "css": [
                "weblogin/styles.css"
            ]
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ]
}