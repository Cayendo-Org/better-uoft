{
    "name": "UofT Dark Mode",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "Adds dark mode to UofT websites (Acorn, Quercus, Weblogin)",
    "background": {
        "scripts": [
            "hot-reload.js",
            "action.js"
        ]
    },
    "icons": {
        "128": "icon.png"
    },
    "browser_action": {
        "default_icon": {
            "128": "icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://acorn.utoronto.ca/sws/*"
            ],
            "run_at": "document_start",
            "css": [
                "acorn/styles.css"
            ],
            "js": [
                "inject.js"
            ]
        },
        {
            "matches": [
                "https://q.utoronto.ca/*"
            ],
            "run_at": "document_start",
            "css": [
                "quercus/styles.css"
            ],
            "js": [
                "inject.js"
            ]
        },
        {
            "matches": [
                "https://idpz.utorauth.utoronto.ca/*",
                "https://weblogin.utoronto.ca/*"
            ],
            "run_at": "document_start",
            "css": [
                "weblogin/styles.css"
            ],
            "js": [
                "inject.js"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
}