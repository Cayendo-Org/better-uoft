{
    "name": "UofT Dark Mode",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "Adds dark mode to UofT websites (Acorn, Quercus, Weblogin)",
    "background": {
        "scripts": [
            "hot-reload.js",
            "inject.js"
        ]
    },
    "browser_action": {
        "default_icon": "icon.png"
    },
    "permissions": [
        "storage",
        "webNavigation",
        "https://acorn.utoronto.ca/sws/*",
        "https://q.utoronto.ca/*",
        "https://weblogin.utoronto.ca/*",
        "https://idpz.utorauth.utoronto.ca/*"
    ]
}